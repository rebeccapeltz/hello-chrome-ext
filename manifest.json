{
    // Required
    "manifest_version": 2,
    "name": "Hello World",
    "version": "1.0",
    // Recommended
    "description": "First Chrome Extension",
    // Pick one (or none)
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Hello!"
    },
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    // Optional
    "author": "Becky Peltz"
}